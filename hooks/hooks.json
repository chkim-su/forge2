{
  "$comment": "Assist-plugin hook-based workflow architecture",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/semantic-intent-router-hook.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/enforce_workflow.py\"",
            "timeout": 3
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/task-post-router.py\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/schema_validator.py\" --post-edit --quiet",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/exit_gate.py\"",
            "timeout": 15
          }
        ]
      }
    ]
  },
  "$schema_notes": {
    "schema_version": "Claude Code 1.0.40+",
    "timeout_unit": "seconds",
    "architecture": "hook-based workflow with agent-first enforcement",
    "workflow_flow": "Router → phase_status=agent_required → agent executes → phase_status=working → free work → complete-phase → next phase",
    "enforcement_hooks": {
      "semantic-intent-router-hook.py": "Analyzes intent at entry, selects workflow, initializes state",
      "enforce_workflow.py": "PreToolUse: blocks all tools until required agent executes",
      "task-post-router.py": "PostToolUse: detects agent completion, transitions to working status",
      "schema_validator.py": "Validates component structure and frontmatter",
      "exit_gate.py": "EXIT GATE - mandatory verification before completion"
    }
  }
}
