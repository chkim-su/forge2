{
  "$comment": "Assist-plugin workflow enforcement hooks",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/workflow_state.py\" init",
            "timeout": 3
          },
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/context_injector.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/workflow_state.py\" require semantic",
            "timeout": 3
          },
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/schema_validator.py\" --pre-edit --quiet",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/workflow_state.py\" require execute",
            "timeout": 3
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/schema_validator.py\" --post-edit",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/workflow_state.py\" update execute in_progress",
            "timeout": 3
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/workflow_state.py\" update execute completed",
            "timeout": 3
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/exit_gate.py\"",
            "timeout": 15
          }
        ]
      }
    ]
  },
  "$schema_notes": {
    "schema_version": "Claude Code 1.0.40+",
    "timeout_unit": "seconds",
    "workflow_phases": ["intent", "semantic", "execute", "verify"],
    "enforcement_hooks": {
      "workflow_state.py": "Tracks and enforces phase progression",
      "context_injector.py": "Loads appropriate skills based on current phase",
      "schema_validator.py": "Validates component structure and frontmatter",
      "exit_gate.py": "EXIT GATE - mandatory verification before completion"
    }
  }
}
